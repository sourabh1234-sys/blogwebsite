<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/header') %>
    <title>Lost Blog</title>
    
</head>
<body>
    <%- include('./partials/nav') %>

    <!-- Hero Section -->
    <div class="position-relative text-white mb-5">
        <!-- Hero Image -->
        <div style="height: 400px; background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7))">
            <div class="container h-100 d-flex flex-column justify-content-center align-items-center text-center">
                <h1 class="display-2 fw-bold mb-4">Blog with the best.</h1>
                <p class="lead mb-4 px-3" style="max-width: 700px;">
                    More bloggers and independent creators choose our platform than any other blogging tool.
                    Tap into intuitive, flexible tools that put writers, bloggers, and creators first.
                </p>
                <button class="btn btn-light btn-lg px-5"><a href="/blog/addblog" class="text-black">Start a blog</a></button>
            </div>
        </div>
    </div>

    <!-- Blog Posts Section -->
    <div class="container my-5">  
        <h2 class="text-center mb-5 display-5">Latest Articles</h2>

        <div class="row g-4">
            <% blogs.forEach(function(blog) { %>
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm hover-shadow transition">
                        <% if (blog.coverphoto) { %>
                            <img src="<%= blog.coverphoto %>" 
                                 class="card-img-top" 
                                 alt="Blog Cover"
                                 style="height: 200px; object-fit: cover;">
                        <% } %>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold mb-3" style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
                                <%= blog.title %>
                            </h5>
                            <p class="card-text text-muted mb-4" style="display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical; overflow: hidden;">
                                <%= blog.body %>
                            </p>
                            <a href="/blog/<%= blog._id %>" class="btn btn-outline-primary mt-auto">Read More</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <%- include('./partials/scripts') %>
    
    <style>
        .hover-shadow:hover {
            transform: translateY(-5px);
            transition: transform 0.3s ease;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1) !important;
        }
        .transition {
            transition: all 0.3s ease;
        }
    </style>
</body>
</html>